<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brianne Kingery - @ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Pathway+Gothic+One" rel="stylesheet">
    <link rel="shortcut icon" href="http://cdn.mysitemyway.com/icons-watermarks/flat-rounded-square-white-on-black/alphanum/alphanum_uppercase-letter-b/alphanum_uppercase-letter-b_flat-rounded-square-white-on-black_512x512.png" type="image/x-icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-default navbar-fixed-top">
        <div @*class="container"*@>
            <div class="navbar-header" id="navbox">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Brianne Kingery", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                <div class="col-xs-12 hidden-sm hidden-md hidden-lg"><hr /></div>
                <div>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="~/Content/Documents/TestResumeDocument.pdf" target="_blank" id="downloadresume">Download Resume</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        @*<hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
